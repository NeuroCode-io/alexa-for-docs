{
    "name": "alexa-for-docs",
    "main": "index.ts",
    "scripts": {
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watchAll",
        "build:watch": "onchange 'src/**/*.ts' -- npm run compile",
        "view:coverage": "serve coverage/lcov-report",
        "clean": "rm -rf coverage bin",
        "format": "prettier --write '**/*.{ts,js,css,json,md}'",
        "compile": "tsc"
    },
    "devDependencies": {
        "@types/jest": "^26.0.19",
        "@types/node": "^10.17.50",
        "@types/source-map-support": "^0.5.3",
        "dotenv": "^8.2.0",
        "jest": "^26.6.3",
        "onchange": "^7.1.0",
        "prettier": "^2.2.1",
        "serve": "^11.3.2",
        "source-map-support": "^0.5.19",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@azure/search-documents": "^11.0.3",
        "@azure/storage-blob": "^12.3.0",
        "@pulumi/azure": "^3.41.0",
        "@pulumi/pulumi": "^2.16.2",
        "axios": "^0.21.1",
        "azure-storage": "^2.10.3",
        "file-type": "^16.1.0",
        "pdfjs-dist": "^2.6.347"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "printWidth": 120
    },
    "jest": {
        "roots": [
            "<rootDir>/processing"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "processing/**/*.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "coverageThreshold": {
            "global": {
                "branches": 30,
                "functions": 30,
                "lines": 30,
                "statements": 30
            }
        },
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover"
        ]
    }
}
